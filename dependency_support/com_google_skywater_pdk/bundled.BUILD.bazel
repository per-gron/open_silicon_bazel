licenses(["notice"])

load("@com_google_open_silicon_bazel//dependency_support/com_google_skywater_pdk:cell_libraries.bzl", "CELL_LIBRARIES")
load("@com_google_open_silicon_bazel_pip_deps//:requirements.bzl", "requirement")

py_binary(
    name = "liberty",
    visibility = ["//visibility:public"],
    srcs = ["@com_google_open_silicon_bazel//dependency_support/com_google_skywater_pdk:liberty_wrapper.py"],
    main = "@com_google_open_silicon_bazel//dependency_support/com_google_skywater_pdk:liberty_wrapper.py",
    python_version = "PY3",
    deps = [
        ":skywater_pdk_py",
    ],
)

py_library(
    name = "skywater_pdk_py",
    visibility = ["//visibility:public"],
    srcs = glob(["scripts/python-skywater-pdk/skywater_pdk/*.py"]),
    imports = ["scripts/python-skywater-pdk"],
    deps = [
        # The code only directly depends on dataclasses-json. I don't understand
        # why the Bazel Python rules don't automatically depend on its
        # dependencies.
        requirement("dataclasses-json"),
        requirement("marshmallow"),
        requirement("marshmallow-enum"),
        requirement("stringcase"),
        requirement("typing-extensions"),
        requirement("typing-inspect"),
        requirement("mypy-extensions"),
    ],
)

filegroup(
    name = "timing_all",
    visibility = ["//visibility:public"],
    srcs = ["@com_google_skywater_pdk_%s//:timing_all" % library_name for library_name in CELL_LIBRARIES],
)
